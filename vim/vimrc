" Using pathogen to manage vim plugins, which are installed 
" in subfolders of .vim/bundle 
execute pathogen#infect()
Helptags

" Use jk or kj to leave insert mode and return to normal mode
imap jk <ESC>
imap kj <ESC>
imap JK <ESC>
imap KJ <ESC>
imap Jk <ESC>
imap jK <ESC>
imap Kj <ESC>
imap kJ <ESC>

set ignorecase
set number
set autoread
set nocompatible

" YouCompleteMe Configuration
nnoremap <leader>jd :YcmCompleter GoTo<CR>
nnoremap <leader>gt :YcmCompleter GetType<CR>

" make YCM compatible with UltiSnips (using supertab)
let g:ycm_key_list_select_completion = ['<C-n>', '<Down>']
let g:ycm_key_list_previous_completion = ['<C-p>', '<Up>']
let g:SuperTabDefaultCompletionType = '<C-n>'

" better key bindings for UltiSnipsExpandTrigger
let g:UltiSnipsExpandTrigger = "<tab>"
let g:UltiSnipsJumpForwardTrigger = "<tab>"
let g:UltiSnipsJumpBackwardTrigger = "<s-tab>"

" Vim-Latex stuff
set grepprg=grep\ -nH\ $*
let g:tex_flavor='latex'
let g:Tex_DefaultTargetFormat='pdf'
let g:Tex_ViewRule_pdf = 'open -a /Applications/Skim.app'
let g:Tex_CompileRule_pdf='latexmk -pdf -interaction=nonstopmode $*'

" Dispatch mappings
nnoremap <leader>dp :Dispatch<CR>
nnoremap <leader>dd :Dispatch!<CR>
autocmd filetype rnoweb let b:dispatch = 'R CMD Sweave % && latexmk -pdf -interaction=nonstopmode %:r.tex && latexmk -c'
autocmd filetype python let b:dispatch = 'python %'
autocmd filetype r let b:dispatch = 'r -q %'
autocmd filetype tex let b:dispatch = 'latexmk -pdf -interaction=nonstopmode % && latexmk -c'

" Quickfix mappings
nnoremap <leader>qo :copen<CR>
nnoremap <leader>qc :cclose<CR>
